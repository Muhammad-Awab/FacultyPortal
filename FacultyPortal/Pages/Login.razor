@page "/login"

@layout Main

<style>
    body, html {
        overflow: hidden;
    }

    .background-image {
        height: 100vh;
        position: relative;
        overflow: hidden !important
    }

    .card {
        background-color: rgba(255, 255, 255, 0.8) !important; 
        border-radius: 1rem;
    }

    .background-image::before {
        content: '';
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        background-image: url('/background.png');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        filter: blur(5px);
        z-index: -1; /* Place it behind the other content */
    }

    .custom-card-shadow {
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.9);
    }
</style>

<section class="vh-30 background-image mt-5 py-5 ">
    <div class="container py-5 vh-30">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col-xl-10">
                <div class="mt-5"></div>

                <div class="card shadow  bg-body rounded border border-danger mt-2" style="border-radius: 1rem; ">
                    <div class="row g-0 align-items-center">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src="/8.png"
                                 alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-lg-5 text-black">


                                <form>

                                    <div class="d-flex align-items-center mb-3 pb-1">
                                        <i class="fas fa-cubes fa-2x me-3"></i>
                                        <div class="d-flex justify-content-center align-content-center">
                                            <span class="h1 fw-bold mb-0"> <span style="color:red">Faculty</span> Portal</span>
                                        </div>
                                    </div>

                                    <h3 class="fw-normal mb-3 pb-3 justify-content-center align-content-center " style="letter-spacing: 1px;"><b>Login <span style="color:red">with</span> us<span style="color:red">!</span>   </b></h3>

                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="form2Example17">Email address</label>
                                        <input type="email" id="form2Example17" placeholder="Enter Email" class="form-control form-control-lg border border-danger"  />

                                    </div>

                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="form2Example27">Password</label>
                                        <input type="password" id="form2Example27" placeholder="Enter Password" class="form-control form-control-lg border border-danger"  />

                                    </div>





                                    <div class="pt-1 mb-4 mt-2">
                                        <div class="d-flex justify-content-center align-content-center">
                                            <button style="width: 166px;height: 35px;" type="button" class="btn btn-danger" >
                                                <span class="fw-bold">LOGIN</span>
                                            </button>
                                        </div>
                                    </div>



                                    <div class="pt-1 mt-2">
                                        <div class="d-flex justify-content-center align-content-center">
                                            <button style="width: 166px;height: 35px;" type="button" class="btn btn-danger">
                                                <a href="/registration" style="text-decoration:none"> <h6 class="fw-bolder" style="color:white"><span class="fw-bold">REGISTER</span></h6> </a>


                                            </button>
                                        </div>
                                    </div>


                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


